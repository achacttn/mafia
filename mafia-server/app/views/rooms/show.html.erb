<h1>Rooms <%= @room.name %></h1>
<br>
<br>
<div class="container">
  <div class="row">
    Players:
    <% @room.users.each do |user| %>
        <div class="col-sm-1">
          <%= user.name %>
        </div>
    <% end %>
  </div>
</div>
<br>
<br>
<% if @room.image.present? %>
  <%= cl_image_tag @room.image, class: "img" %>
  <% end %>
<% if @current_user.present? %>
<%= link_to 'Edit', edit_room_path( @room ) %>
|
<%= link_to 'Delete', room_path( @room ), method: 'delete' %>
<% end %>
<br>
<br>
<%# link_to "Back to Index", rooms_path, class: "btn btn-info btn-block btn-sm buttonFont customButton" %>

<div class="row col-md-8 col-md-offset-2">

<div class="panel panel-default">
  <% if @room.messages.any? %>
    <div class="panel-body" id="messages">
      <%= render partial: 'messages/message', collection: @room.messages%>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages">
    <%= 'enter a message' %>
    </div>
  <%end%>
</div>

  <%= render partial: 'messages/message_form', locals: {message: @message, room: @room}%>
</div>

<h1>Messages</h1>
<% @room.messages.each do |m| %>
  <%= m.text_body %> 
  <br>
  <% end %>