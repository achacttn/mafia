<h1>Rooms <%= @room.name %></h1>
<br>
<br>
<div class="container">
  <div class="row">
    Players:
    <% @room.users.each do |user| %>
        <div class="col-sm-1">
          <%= user.name %>
        </div>
    <% end %>
  </div>
</div>
<br>
<br>
<% if @room.image.present? %>
  <%= cl_image_tag @room.image, class: "img" %>
  <% end %>
<% if @current_user.present? %>
<%= link_to 'Edit', edit_room_path( @room ) %>
|
<%= link_to 'Delete', room_path( @room ), method: 'delete' %>
<% end %>
<br>
<br>
<%# link_to "Back to Index", rooms_path, class: "btn btn-info btn-block btn-sm buttonFont customButton" %>

<p>Please type your message below :</p>
<% if flash[:errors] %>
  <strong>The following errors need to be corrected :</strong>
  <ol>
    <% flash[:errors].each do |e| %>
    <li>
      <%= e %>
    </li>
    <% end %>
  </ol>
<% end %>
<div class="message">
  <%= form_tag @message do %>
  <div class="form-group row">
  <div class="col-sm-10">
   <%= text_area_tag :text_body, placeholder= 'Chat here' %>
  </div>
  </div>
   <%= hidden_field_tag :room_id, @room.id %>
   <div class="col-sm-10">
   <%= submit_tag "Save", class: "btn btn-primary btn-lg" %>
   <% end %>
</div>


<h1>History</h1>
<% @room.messages.each do |r| %>
  <%= r.text_body %> <br>
<% end %>
