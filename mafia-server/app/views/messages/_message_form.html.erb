
<%= form_for message, remote: true, authenticity_token: true do |f| %>
  <%= f.label :text_body %>:
  <%= f.text_area :text_body, class: "form-control", data: {textarea: "message"} %>

  <%# f.hidden_field :user_id, value: user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
  <%= f.submit "Submit", class: "btn btn-primary", data: {send: "message"} %>
<% end %>
